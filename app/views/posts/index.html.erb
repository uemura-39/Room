<div class="contents row">
  <div class="main-contents">
    <% @posts.each do |post| %>
      <div class="post-item">
        <div class="post-image">
          <%= link_to image_tag(post.image.to_s), post%>
        </div>
        <div class="post-nav">
          <%= image_tag "member_photo_noimage_thumb.png",class: "user_icon-mini"%>
          <%# 上部はuserのアイコンを登録できる様にしたら変更する %>
          <%= link_to post.user.nickname, post.user, class: 'post-nav-user' %>
          <div class='post-category'>カテゴリー:◯◯</div>
          <%# 上部はカテゴリー機能を追加したら変更する %>
        </div>
      </div>
    <% end %>
  </div>
</div>
